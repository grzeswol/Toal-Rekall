<% if @task %>
	<p>Are you sure you want to delete the following note: <em>"<%= @task.content %>"</em>?</p>
	<form action="/<%= @task.id %>" method="post">
	    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Yes, Delete It!">
    <a href="/<%= @task.id %>">Cancel</a>
  </form>
<% else %>
  <p>Note not found.</p>
<% end %>
