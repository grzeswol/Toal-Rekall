<section id="add">
	<form action="/" method="post">
		<textarea name="content" placeholder="Your note&hellip;"></textarea>
		<input type="submit" value="Take Note!">
	</form>
</section>


<% @tasks.each do |task| %>
	<article <%= 'class="complete"' if task.complete %>>
		<p>
		<%= task.content %>
		<span><a href="/<%= task.id %>">[edit]</a></span>
		</p>
		<p class="links">
		<a href="/<%= task.id %>/complete">&#10003;</a>
		</p>
		<p class="meta">Created: <%= task.created_at %></p>
	</article>
<% end %>
